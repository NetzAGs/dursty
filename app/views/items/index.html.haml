%h1 Artikel
%h2
  %a{:href => new_item_path}
    Neuen Artikel anlegen
    =image_tag "new.png", :width => "20px"

%table{:class=> "table-index"}
  %thead
    %td Name
    %td Preis
  %tbody
    - @items.each do |i|
      %tr
        %td= i.name
        %td= number_to_currency(i.preis, :precision=>2, :unit=>" &#8364; ", :separator=>",")
        %td= link_to(image_tag("edit.png", :width => "20px"), edit_item_path(i), :title => "Item editieren")
        %td= link_to(image_tag("delete.png", :width => "20px"), item_path(i), :title => "Item löschen", :method => :delete, :confirm => "Dieses Item wirklich löschen?")
